<table class='table table-striped table-responsive table-bordered'>
  <thead>
    <th>Name</th>
    <th>Mobile</th>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.mobile%></td>
      </tr>
    <%end%>
  </tbody>
</table>
<div class="text-center">
    <div >
      <%= paginate @contacts , remote: true%>
    </div>
</div>
