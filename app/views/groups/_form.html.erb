<% if @group.persisted? %>
  <legend>Edit Group</legend>
<% else %>  
  <legend>New Group</legend>
<%end%>

<%= simple_form_for(@group, remote: :true) do |f| %>
  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.input :name %>
  <%= f.submit %>
<%end%>