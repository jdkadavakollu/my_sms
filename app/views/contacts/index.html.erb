<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-5">
     <div class="x_panel tile">
		<div class="x_title">
          <h3>Contacts List</h3>
        </div>
        <div class="x_content">
		  <div id="contacts-list" >
		    <% if @contacts.empty? %>
		      <h3> No contacts available </h3>
		    <% else %>
		      <%= render 'contacts_list' %>
		    <% end %>
		  </div>
		</div>
	  </div>
	</div>
	<div class="col-lg-5">
      <div class="x_panel tile">
		<div class="x_title">
          <h3>Add Contacts</h3>
        </div>
        <div class="x_content">
			<div id='new-contact' >
			  <%= render 'form' %>
			</div>
		</div>
	  </div>
	</div>
	<div class="col-lg-5">
      <div class="x_panel tile">
		<div class="x_title">
          <h3>Upload Contacts</h3>
        </div>
        <div class="x_content">
			<div id='import-contacts' >
			  <%= render 'import_contacts' %>
			</div>
		</div>
	  </div>
	</div>
  </div>
</div>