<table class='table table-striped table-responsive table-bordered'>
  <thead>
    <th>Name</th>
    <th>Course</th>
    <th>Students</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= link_to section.name, section_path(section) %></td>
        <td><%= section.course.name %></td>
        <td>0</td>
        <td><%= link_to 'Edit', edit_section_path(section), class: 'btn btn-primary', remote: true %>
      </tr>
    <%end%>
  </tbody>
</table>
<div class="text-center">
    <div >
      <%= paginate @sections %>
    </div>
</div>
