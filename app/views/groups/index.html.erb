<div class="wrapper wrapper-content">
  <div class="row">
	<% add_breadcrumb_and_set_title 'Create new group' %>
	<div class="col-md-7">
	  <div class="x_panel tile">
		<div class="x_title">
	      <h3>Groups</h3>
	    </div>
	    <div class="x_content">
		  <div id="groups-list" >
		    <% if @groups.empty? %>
 			  <h3> No Groups available </h3>
		    <% else %>
		      <%= render 'groups_list' %>
		    <% end %>
		  </div>
		</div>
	  </div>
	</div>
	<div class="col-md-5">
		<div id="new-group" >
		  <%= render 'form' %>
		</div>
	</div>
  </div>
</div>