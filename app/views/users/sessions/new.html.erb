<div class="container " style="margin-top:10%">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 ">
      <center>
        <h2 >Sign in</h2>
      </center>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-signin") do |f| %>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= f.email_field :email, placeholder: "Email address", class: "form-control", autofocus: true %>
        <label for="inputPassword" class="sr-only">Password</label>

        <%= f.password_field :password,class: "form-control", placeholder: "Password",required: true %>
        <br>
        <div class="actions">
          <%= f.submit "Log in" ,class: "btn btn-ls btn-primary btn-block" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
