<% if @group.persisted? %>
  <legend>Edit Group</legend>
<% else %>  
  <legend>New Group</legend>
<%end%>

<%= simple_form_for(@group, remote: :true) do |f| %>
  <%= f.input :name %>
  <% if @group_errors %>
    <ul>
      <% @group_errors.each do |msg| %>
        <li style='color: red;'><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.submit %>
<%end%>