
<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">

      <div class="navbar nav_title" style="border: 0;">
        <a href="index.html" class="site_title"><i class="fa fa-paw"></i> <span>Gentellela Alela!</span></a>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%= image_tag "img.jpg", :class => "img-circle profile_img"  %>
        </div>
        <div class="profile_info">
          <span>Welcome,</span>
          <h2><%= current_user.full_name %></h2>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section">
          <h3>General</h3>
          <ul class="nav side-menu">
            <li class="<%= 'active' if current_page?('/home/index') %>">
                <%= link_to authenticated_root_path do %>
                <i class="fa fa-home"></i> <span class="nav-label">Home</span>
                <% end %>
            </li>
            <li class="<%= 'active' if current_page?('/groups') %>">
                <%= link_to groups_path do %>
                <i class="fa fa-group"></i> <span class="nav-label">Groups</span>
                <% end %>
            </li>
            <li class="<%= 'active' if current_page?('/contacts') %>">
                <%= link_to contacts_path do %>
                <i class="fa fa-columns"></i> <span class="nav-label">Contacts</span>
                <% end %>
            </li>
            <li class="<%= 'active' if current_page?('/sms_groups/new') %>">
                <%= link_to new_sms_group_path do %>
                <i class="fa fa-columns"></i> <span class="nav-label">SMS</span>
                <% end %>
            </li>
            <li class="<%= 'active' if current_page?('/courses') %>">
                <%= link_to courses_path do %>
                <i class="fa fa-columns"></i> <span class="nav-label">Courses</span>
                <% end %>
            </li>
            <li class="<%= 'active' if current_page?('/sections') %>">
                <%= link_to sections_path do %>
                <i class="fa fa-columns"></i> <span class="nav-label">Sections</span>
                <% end %>
            </li>
            <li class="<%= 'active' if current_page?('/students') %>">
                <%= link_to students_path do %>
                <i class="fa fa-columns"></i> <span class="nav-label">Students</span>
                <% end %>
            </li>
          </ul>
        </div>

      </div>
      <!-- /sidebar menu -->

      <!-- /menu footer buttons -->
      <div class="sidebar-footer hidden-small">
        <a data-toggle="tooltip" data-placement="top" title="Settings">
          <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
          <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Lock">
          <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Logout">
          <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
        </a>
      </div>
      <!-- /menu footer buttons -->
    </div>
  </div>
